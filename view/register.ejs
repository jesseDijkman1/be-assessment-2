<body class="user-form-body">
<!-- Main Menu -->
<% include includes/menu.ejs %>

  <form action="/register" method="post">
    <div class="user-form">
      <h1>Register</h1>

      <label for="first-name">First name</label>
      <input type="text" id="first-name" name="user_firstName">

      <label for="last-name">Last name</label>
      <input type="text" id="last-name" name="user_lastName">

      <label for="email">E-mail</label>
      <input type="email" id="email" name="user_email">

      <label for="password">Password</label>
      <input type="password" id="password" name="user_password">

      <label for="password-conf">Repeat password</label>
      <input type="password" id="password-conf" name="user_passwordConf">
      <!-- Submit -->
      <button type="submit">Register</button>

      <a href="/login">Already have an account?</a>
    </div>
  </form>

