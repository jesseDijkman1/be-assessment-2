<% include includes/head.ejs %>

<body class="user-form-body">
<!-- Main Menu -->
<% include includes/menu.ejs %>

  <form action="/register" method="post">
    <div class="user-form">
      <h1>Register</h1>

      <label for="first-name">First name</label>
      <input class="<%= error.user_firstName %>" type="text" id="first-name" name="user_firstName" value="<%= data.user_firstName %>" placeholder="<%= msg.user_firstName %>">

      <label for="last-name">Last name</label>
      <input class="<%= error.user_lastName %>" type="text" id="last-name" name="user_lastName" value="<%= data.user_lastName %>" placeholder="<%= msg.user_lastName %>">

      <label for="email">E-mail</label>
      <input class="<%= error.user_email %>" type="text" id="email" name="user_email" value="<%= data.user_email %>" placeholder="<%= msg.user_email %>">

      <label for="password">Password</label>
      <input class="<%= error.user_password %>" type="password" id="password" name="user_password" placeholder="<%= msg.user_password %>">

      <label for="password-conf">Repeat password</label>
      <input class="<%= error.user_passwordConf %>" type="password" id="password-conf" name="user_passwordConf">
      <!-- Submit -->
      <button type="submit">Register</button>

      <a href="/login">Already have an account?</a>
    </div>
  </form>

  <% include includes/footer.ejs %>
